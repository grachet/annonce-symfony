{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}

	    <small class="text-muted"><i class="fa fa-angle-double-left"></i> guest guest pour se connecter rapidement <i class="fa fa-angle-double-right"></i></small>

    <div class="md-form">
        <i class="fa fa-user prefix grey-text"></i>
        <input type="text" id="username" class="form-control my-5" name="_username" value="{{ last_username }}"
               required="required" autocomplete="username"/>
        <label for="username">{{ 'security.login.username'|trans }}</label>
    </div>

    <div class="md-form ">
        <i class="fa fa-lock prefix grey-text"></i>
        <input type="password" id="password" class="form-control" name="_password" required="required"
               autocomplete="current-password"/>
        <label for="password">{{ 'security.login.password'|trans }}</label>
    </div>


    <div class="form-check  mt-5 ">
        <input type="checkbox" class=" form-check-input" id="remember_me" name="_remember_me" value="on"/>
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>


    <div class="text-center mt-3">
        <input type="submit" id="_submit" class="btn btn-primary " name="_submit"
               value="{{ 'security.login.submit'|trans }}"/>
    </div>
</form>
